<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--  Warna bg  -->
    <solid android:color="#FF0000"/>

    <!--  Sudut membulat  -->
    <corners android:radius="20dp"/>

    <!--  Garis pinggir (border)  -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/>

    <!--  Padding dalam shape  -->
    <padding
        android:right="10dp"
        android:bottom="10dp"
        android:top="10dp"
        android:left="10dp"/>
</shape>